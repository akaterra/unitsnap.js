{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./cjs",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node", "jasmine"],
    "useDefineForClassFields": false
  },
  "exclude": [
    "./coverage",
    "./dist",
    "./spec",
    "./esm",
    "./cjs"
  ]
}
